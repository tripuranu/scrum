- disable_tomorrow = date >= Date.today
.dailyform__date-picker.float-right
  = link_to fa_icon('chevron-left'), edit_dailyform_path(date - 1.day)
  .btn
    = date.strftime('%b %-d, %Y')
    %input#datepicker{ :hidden => true ,:type => "text"}/
  = link_to fa_icon('chevron-right'), (disable_tomorrow ? '' : edit_dailyform_path(date + 1.day)), class: "#{'text-muted disabled' if disable_tomorrow}"